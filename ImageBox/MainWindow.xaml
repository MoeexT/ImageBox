<Window x:Class="ImageBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageBox"
        mc:Ignorable="d"
        Title="ImageBox" Height="750" Width="1250">
    <Grid>
        <!--显示图片-->
        <Image x:Name="image" HorizontalAlignment="Left" Height="701" Margin="0,10,0,0" VerticalAlignment="Top" Width="1051"/>

        <!--复选框，显示默认图片-->
        <CheckBox Content="显示默认图片" HorizontalAlignment="Right" Margin="0,696,10.2,0" VerticalAlignment="Top" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>

        <!--按钮们-->
        <Button Content="打开图片" HorizontalAlignment="Right" Margin="0,532,103.2,0" VerticalAlignment="Top" Width="60" Click="Open_Image" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
        <Button Content="生成" HorizontalAlignment="Right" Margin="0,532,31.2,0" VerticalAlignment="Top" Width="60" Click="Generate_Value" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
        <!--
        <Button Content="显示默认图片" HorizontalAlignment="Right" Margin="0,391,81.2,0" VerticalAlignment="Top" Width="81" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Click="Show_Default_Image"/>
        <Button Content="隐藏" HorizontalAlignment="Left" Margin="1167,393,0,0" VerticalAlignment="Top" Width="54" Click="Hide_Image"/>
        -->

        <!--需要显示的信息-->
        <TextBlock x:Name="coordinate_x" HorizontalAlignment="Right" Margin="0,424,137.2,0" TextWrapping="Wrap" Text="X" VerticalAlignment="Top" Height="18"/>
        <!--<TextBox x:Name="value_x" HorizontalAlignment="Right" Height="18" Margin="0,268,41.2,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="50"/>-->
        <Label x:Name="value_x" Content="0" HorizontalAlignment="Right" Height="24" Margin="0,418,47.2,0" VerticalAlignment="Top" Width="44"/>

        <TextBlock x:Name="coordinate_y" HorizontalAlignment="Right" Margin="0,448,138.2,0" TextWrapping="Wrap" Text="Y" VerticalAlignment="Top" Height="18"/>
        <!--<TextBox x:Name="value_y" HorizontalAlignment="Right" Height="18" Margin="0,291,41.2,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="50"/>-->
        <Label x:Name="value_y" Content="0" HorizontalAlignment="Right" Height="24" Margin="0,442,47.2,0" VerticalAlignment="Top" Width="44"/>

        <TextBlock x:Name="marquee_length" HorizontalAlignment="Right" Margin="0,477,111.2,0" TextWrapping="Wrap" Text="Length" VerticalAlignment="Top" Height="18"/>
        <!--<TextBox x:Name="value_length" HorizontalAlignment="Right" Height="18" Margin="0,328,41.2,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="50"/>-->
        <Label x:Name="value_length" Content="0" HorizontalAlignment="Right" Height="24" Margin="0,471,47.2,0" VerticalAlignment="Top" Width="44"/>

        <TextBlock x:Name="marquee_height" HorizontalAlignment="Right" Margin="0,501,112.2,0" TextWrapping="Wrap" Text="Height" VerticalAlignment="Top" Height="18"/>
        <!--<TextBox x:Name="value_height" HorizontalAlignment="Right" Height="18" Margin="0,352,41.2,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="50"/>-->
        <Label x:Name="value_height" Content="0" HorizontalAlignment="Right" Height="24" Margin="0,495,47.2,0" VerticalAlignment="Top" Width="44"/>










    </Grid>
</Window>
